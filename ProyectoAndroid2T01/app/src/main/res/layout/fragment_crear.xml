<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.crear.CrearFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/loginimg">



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/custom_edittext"
                    android:orientation="vertical"
                    android:backgroundTint="@color/lavander"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/loginText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TAREA"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/nombre"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/custom_edittext02"
                        android:drawablePadding="8dp"
                        android:hint="Nombre"
                        android:textAlignment="center"
                        android:padding="8dp"
                        android:textColorHint="@color/white"
                        android:textColor="@color/white"
                        android:width="2dp"
                        android:color="@color/lavander"
                        android:inputType="textCapSentences"
                        />

                    <EditText
                        android:id="@+id/descripcion"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/custom_edittext02"
                        android:drawablePadding="8dp"
                        android:hint="Descripcion"
                        android:textAlignment="center"
                        android:padding="8dp"
                        android:textColorHint="@color/white"
                        android:textColor="@color/white"
                        android:width="2dp"
                        android:color="@color/lavander"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="textMultiLine"
                        />

                    <EditText
                        android:id="@+id/fecha"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/custom_edittext02"
                        android:drawablePadding="8dp"
                        android:textAlignment="center"
                        android:padding="8dp"
                        android:textColorHint="@color/white"
                        android:textColor="@color/white"
                        android:width="2dp"
                        android:hint="Fecha"
                        android:color="@color/lavander"
                        android:inputType="date"
                        />

                    <Spinner
                        android:id="@+id/spinnerPrioridad"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/custom_edittext02"
                        android:drawablePadding="8dp"
                        android:textAlignment="center"
                        android:padding="8dp"
                        android:textColorHint="@color/white"
                        android:textColor="@color/white"
                        android:width="2dp"
                        android:color="@color/lavander"
                        android:inputType="textCapSentences"
                    />

                    <Spinner
                        android:id="@+id/spinnerEstado"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/custom_edittext02"
                        android:drawablePadding="8dp"
                        android:textAlignment="center"
                        android:padding="8dp"
                        android:textColorHint="@color/white"
                        android:textColor="@color/white"
                        android:width="2dp"
                        android:color="@color/lavander"
                        android:inputType="textCapSentences"
                        tools:ignore="InvalidId" />




                </LinearLayout>

            </androidx.cardview.widget.CardView>



    </LinearLayout>




</FrameLayout>