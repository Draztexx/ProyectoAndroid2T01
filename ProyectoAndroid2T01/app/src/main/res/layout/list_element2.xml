<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="32dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_edittext"
        android:animateLayoutChanges="true"

        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="6dp">

            <ImageView
                android:id="@+id/iconImagenView"
                android:layout_width="81dp"
                android:layout_height="130dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                app:srcCompat="@drawable/baseline_library_add_check_24" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_toEndOf="@+id/iconImagenView"
                android:layout_toRightOf="@+id/iconImagenView"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nombreTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="Nombre"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/descripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="descripcion"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/fechaTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="fecha"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/prioridadTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="prioridad"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/estadoTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="estado"
                    android:textSize="18sp" />


            </LinearLayout>



        </RelativeLayout>


        <Button
            android:id="@+id/eliminarbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/lavander"
            android:text="Eliminar"
            android:textSize="20sp"
            app:cornerRadius="15dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>